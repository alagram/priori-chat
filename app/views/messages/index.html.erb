<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 chat-area">

  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <span class="glyphicon glyphicon-comment"></span> Chat
          </div>
          <div class="panel-body">
              <ul id="chat">
                <%= render @messages %>
              </ul>
          </div>
          <div class="panel-footer">
            <%= form_for @message, remote: true do |f| %>
              <div class="input-group">
                  <%= f.text_field :body, id: 'btn-input', class: 'form-control input-sm', autofocus: '', placeholder: "your message here.."  %>
                  <span class="input-group-btn">
                      <button class="btn btn-primary btn-sm" id="btn-chat">
                          Send</button>
                  </span>
              </div>
            </div>
           <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 chat-area">
  <div class="text-center col-md-6 col-md-offset-3">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-user"></span> Online Users
      </div>
      <div class="panel-body">
        <div id="display-user-name" class="text-center col-md-6 col-md-offset-3">
          <% @online_users.each do |online_user| %>
            <div class="<%= cycle("alert alert-info", "alert alert-success") -%>">
              <%= online_user.username %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
